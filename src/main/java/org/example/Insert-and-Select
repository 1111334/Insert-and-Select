VALUES ('Yoghurt', 2.00, true, true, false, true);


SELECT NAME FROM INGREDIENT;
SELECT NAME, PRICE FROM INGREDIENT;
SELECT * FROM INGREDIENT ORDER BY NAME;
SELECT * FROM INGREDIENT ORDER BY GLUTEN_FREE DESC;